class Solution:
    def minimumFuelCost(self, roads: List[List[int]], seats: int) -> int:
        graph=defaultdict(list)
        
        for i,j in roads:
            graph[i].append(j)
            graph[j].append(i)

        print(graph)
        
        
        def dfs(node,parent):
            nonlocal res
            
            passengers=0

            for child in graph[node]:
                if child!=parent:
                    p=dfs(child,node)
                    passengers+=p
                    res += int(ceil(p/seats))
            return passengers+1

        res = 0
        dfs(0,-1)
        return res
        

